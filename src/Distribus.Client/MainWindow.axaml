<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Distribus.Client.MainWindow"
        Title="Launcher"
        WindowStartupLocation="CenterScreen"
        Width="500" Height="100" CanResize="False"
        Loaded="Window_OnLoaded">
    <Border Padding="25,20">
        <StackPanel Spacing="10">
            <TextBlock Name="StatusLabel" Text="Preparing..." />
            <ProgressBar Name="StatusProgress" IsIndeterminate="True" />
            <UniformGrid Columns="2">
                <TextBlock Name="PercentLabel" Text="" TextAlignment="Left" />
                <TextBlock Name="DetailsLabel" Text="" TextAlignment="Right" />
            </UniformGrid>
        </StackPanel>
    </Border>
</Window>